# ============================================
# Vyntara Environment Variables Template
# ============================================
# Copy this file to .env.local and fill with your values
# NEVER commit .env.local to git!

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database - Supabase
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Authentication & Security
# ============================================
SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# Google Cloud Platform
# ============================================
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_API_KEY=your-google-custom-search-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ============================================
# Vertex AI / RAG
# ============================================
RAG_CORPUS_ID=your-rag-corpus-id
RAG_LOCATION=us-central1

# ============================================
# WhatsApp Business API
# ============================================
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_BUSINESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_GPT=your-phone-number-id
WHATSAPP_PHONE_VYNTARA=your-phone-number-id
WHATSAPP_PHONE_SENHOR=your-phone-number-id
WHATSAPP_BUSINESS_PHONE_ID=your-primary-phone-id
WHATSAPP_BUSINESS_PHONE_ID_2=your-secondary-phone-id

# ============================================
# Meta / Facebook Ads
# ============================================
META_TOKEN=your-meta-access-token
META_AD_ACCOUNT_ID=act_your-ad-account-id

# ============================================
# Mercado Pago
# ============================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# ============================================
# External APIs - Brazil
# ============================================
ESCAVADOR_API_KEY=your-escavador-api-key
TRANSPARENCIA_API_KEY=your-transparencia-api-key
DATAJUD_API_KEY=your-datajud-api-key

# ============================================
# Hotmart
# ============================================
HOTMART_HOTTOK=your-hotmart-hottok

# ============================================
# Email
# ============================================
MAILERSEND_API_KEY=your-mailersend-api-key

